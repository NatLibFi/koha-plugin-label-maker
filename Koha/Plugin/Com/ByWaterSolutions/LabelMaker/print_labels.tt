<html>
    <head>
        <!-- Layout CSS -->
        <style>
            [% labels_layout.content %]
            #toggleEdit {
                position: absolute;
                right: 0;
                top: 0;
            }

            @media print {
                #toggleEdit {
                        display: none !important;
                }
                .editable {
                    box-shadow: none;
                }
            }
        </style>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        <!-- Printer profile CSS -->
        <style>
            [% labels_printer_profile.content %]
        </style>
    </head>

    <body>
        <button id="toggleEdit">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </button>
        <div id="labelContentContainer">
            [% labels_template.content | eval %]
        </div>
    </body>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script>
        $('#toggleEdit').click( function() {
                $('#labelContentContainer').attr('contenteditable', function(index, attr){
                    return attr == 'true' ? null : 'true';
                });

                $('#toggleEdit .fa').toggleClass('fa-lock').toggleClass('fa-unlock');
        })
    </script>
</html>
